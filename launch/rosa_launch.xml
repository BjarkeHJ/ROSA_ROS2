<launch>
    <node pkg="dev_rosa" exec="rosa_exec" name="rosa_node" output="screen">
        <!-- ROS2 ROSA NODE -->
        <param name="num_scans" type="int" value="1"/>

        <!-- ROSA MAIN -->
        <param name="max_pts" type="int" value="500"/>
        <param name="normal_est_KNN" type="int" value="10"/>
        <param name="neighbour_radius" type="float" value="0.1"/>
        <param name="neighbour_KNN" type="int" value="6"/>
        <param name="drosa_iter" type="int" value="5"/>
        <param name="dcrosa_iter" type="int" value="5"/>
        <param name="delta" type="float" value="0.01"/>
        <param name="sample_radius" type="float" value="0.05"/>
    </node>
</launch>
